{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules"
    ],
    "baseUrl": ".",
    "paths": {
      "verifiable-data": [
        "../lib/proto.ts"
      ],
      "lib/*": [
        "../lib/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*",
    "./../lib/proto.ts",
    "./../config/*"
  ]
}